pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'asmaibr/student-management-app'
        DOCKER_TAG = 'latest'
        SONAR_HOST_URL = 'http://localhost:9000'
        K8S_NAMESPACE = 'devops'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/asmaibr1819/student-management.git'
            }
        }

        stage('Build + SonarQube') {
            steps {
                dir('student-management') {
                    withCredentials([string(
                        credentialsId: 'sonarqube-token',
                        variable: 'SONAR_TOKEN'
                    )]) {
                        sh '''
                            echo "üîç Build Maven + Analyse SonarQube"
                            mvn clean package sonar:sonar \
                              -Dsonar.projectKey=student-management-app \
                              -Dsonar.projectName="Student Management App" \
                              -Dsonar.host.url=${SONAR_HOST_URL} \
                              -Dsonar.login=${SONAR_TOKEN} \
                              -DskipTests
                            echo "‚úÖ Build et analyse termin√©s"
                        '''
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('student-management') {
                    sh '''
                        echo "üê≥ Construction image Docker"
                        docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                        echo "‚úÖ Image Docker construite avec succ√®s"
                    '''
                }
            }
        }

        stage('Push Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-credentials',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                        echo "üì§ Pouss√©e vers Docker Hub..."
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                        docker logout
                        echo "‚úÖ Image pouss√©e sur Docker Hub"
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                dir('student-management') {
                    sh '''
                        echo "üöÄ D√©ploiement sur Kubernetes..."
                        
                        # Cr√©er le namespace
                        kubectl create namespace ${K8S_NAMESPACE} --dry-run=client -o yaml | kubectl apply -f -
                        
                        # Appliquer toutes les configurations
                        kubectl apply -f k8s/all-in-one.yaml
                        
                        echo "‚è≥ Attente du d√©marrage..."
                        sleep 30
                        
                        # V√©rification
                        echo "üìä √âtat des pods :"
                        kubectl get pods -n ${K8S_NAMESPACE}
                        
                        echo "üåê √âtat des services :"
                        kubectl get svc -n ${K8S_NAMESPACE}
                        
                        echo "‚úÖ D√©ploiement Kubernetes termin√©"
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "üéâ PIPELINE CI/CD COMPL√àTE R√âUSSIE"
            echo "üìä SonarQube: ${SONAR_HOST_URL}/dashboard?id=student-management-app"
            echo "üê≥ Docker: ${DOCKER_IMAGE}:${DOCKER_TAG}"
            echo "üöÄ Kubernetes Namespace: ${K8S_NAMESPACE}"
        }
        always {
            cleanWs()
        }
    }
}
