cat > Jenkinsfile << 'EOF'
pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'asmaibr/student-management-app'
        DOCKER_TAG = 'latest'
        SONAR_HOST_URL = 'http://localhost:9000'
        K8S_NAMESPACE = 'devops'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/asmaibr1819/student-management.git'
            }
        }

        stage('Build + SonarQube') {
            steps {
                dir('student-management') {
                    withCredentials([string(
                        credentialsId: 'sonarqube-token',
                        variable: 'SONAR_TOKEN'
                    )]) {
                        sh '''
                            echo "ðŸ” Build Maven + Analyse SonarQube"

                            mvn clean package sonar:sonar \
                              -Dsonar.projectKey=student-management-app \
                              -Dsonar.projectName="Student Management App" \
                              -Dsonar.host.url=${SONAR_HOST_URL} \
                              -Dsonar.login=${SONAR_TOKEN} \
                              -DskipTests

                            echo "âœ… Build et analyse terminÃ©s"
                        '''
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('student-management') {
                    sh '''
                        echo "ðŸ³ Construction image Docker"

                        cat > Dockerfile << 'EOF'
FROM maven:3.9-eclipse-temurin-17 AS builder
WORKDIR /app
COPY . .
RUN mvn clean package -DskipTests

FROM eclipse-temurin:17-jre
WORKDIR /app
COPY --from=builder /app/target/*.jar app.jar
EXPOSE 8089
ENTRYPOINT ["java", "-jar", "app.jar"]
EOF

                        echo "ðŸ“„ Contenu du Dockerfile :"
                        cat Dockerfile
                        
                        docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                        
                        echo "âœ… Image Docker construite avec succÃ¨s"
                    '''
                }
            }
        }

        stage('Push Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-credentials',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                        echo "ðŸ“¤ PoussÃ©e vers Docker Hub..."
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                        docker logout
                        echo "âœ… Image poussÃ©e sur Docker Hub"
                    '''
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                dir('student-management') {
                    sh '''
                        echo "ðŸš€ DÃ©ploiement sur Kubernetes..."
                        
                        # CrÃ©er le namespace s'il n'existe pas
                        kubectl create namespace ${K8S_NAMESPACE} --dry-run=client -o yaml | kubectl apply -f -
                        
                        # Appliquer les configurations YAML
                        kubectl apply -f k8s/all-in-one.yaml
                        
                        echo "â³ Attente du dÃ©marrage des pods..."
                        sleep 30
                        
                        # VÃ©rification
                        echo "ðŸ“Š Ã‰tat des pods :"
                        kubectl get pods -n ${K8S_NAMESPACE}
                        
                        echo "ðŸŒ Ã‰tat des services :"
                        kubectl get svc -n ${K8S_NAMESPACE}
                        
                        echo "âœ… DÃ©ploiement Kubernetes terminÃ©"
                    '''
                }
            }
        }
        
        stage('Verify Deployment') {
            steps {
                sh '''
                    echo "ðŸ§ª VÃ©rification du dÃ©ploiement..."
                    
                    # VÃ©rifier que les pods sont prÃªts
                    timeout 120 bash -c "until kubectl get pods -n ${K8S_NAMESPACE} -l app=spring-app 2>/dev/null | grep -q Running; do sleep 5; echo 'â³ En attente des pods...'; done"
                    
                    # VÃ©rifier les logs
                    echo "ðŸ“‹ Derniers logs de l'application :"
                    kubectl logs deployment/spring-app -n ${K8S_NAMESPACE} --tail=10 2>/dev/null || echo "âš ï¸ Logs non encore disponibles"
                    
                    # Obtenir l'URL du service
                    echo "ðŸ”— Pour accÃ©der Ã  l'application :"
                    echo "   minikube service spring-service -n ${K8S_NAMESPACE} --url"
                '''
            }
        }
    }

    post {
        success {
            echo "ðŸŽ‰ PIPELINE CI/CD COMPLÃˆTE RÃ‰USSIE"
            echo "ðŸ“Š SonarQube: ${SONAR_HOST_URL}/dashboard?id=student-management-app"
            echo "ðŸ³ Image Docker: ${DOCKER_IMAGE}:${DOCKER_TAG}"
            echo "ðŸš€ Kubernetes Namespace: ${K8S_NAMESPACE}"
            echo "ðŸ“‹ Commandes de vÃ©rification :"
            echo "   kubectl get pods -n ${K8S_NAMESPACE}"
            echo "   kubectl get svc -n ${K8S_NAMESPACE}"
            echo "   kubectl logs deployment/spring-app -n ${K8S_NAMESPACE} --tail=20"
        }
        failure {
            echo "âŒ PIPELINE Ã‰CHOUÃ‰E"
            echo "Derniers logs d'erreur :"
            sh '''
                echo "=== Ã‰vÃ©nements Kubernetes ==="
                kubectl get events -n ${K8S_NAMESPACE} --sort-by='.lastTimestamp' | tail -20 2>/dev/null || echo "Aucun Ã©vÃ©nement"
                echo "=== Logs de l'application ==="
                kubectl logs deployment/spring-app -n ${K8S_NAMESPACE} --tail=50 2>/dev/null || echo "Aucun log disponible"
            '''
        }
        always {
            cleanWs()
            sh '''
                echo "ðŸ§¹ Nettoyage des conteneurs de test..."
                docker stop test-app 2>/dev/null || true
                docker rm test-app 2>/dev/null || true
            '''
        }
    }
}
EOF
